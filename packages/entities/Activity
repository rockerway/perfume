package models

import (
	"models/Person"
	"models/Date
)

type Activity struct {
	oldDrive Person,
	passengers []Person,
	date Date,
}

func (a Activity) GetOldDrive() Person {
	return a.oldDrive
}

func (a Activity) AddPassenger(person Person) {
	a.passengers = append(a.passengers, person)
}

func (a Activity) GetPassengers() Person {
	return a.passengers
}

func (a Activity) GetDate() Person {
	return a.date
}

func InitActivity(oldDrive Person, date Date) Activity {
	person := Activity {
		oldDrive: oldDrive,
		date: date,
	}
}
